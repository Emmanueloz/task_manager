{% extends "base.jinja" %}

{% block title %}Lista de Notas{% endblock title %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <!-- Título centrado -->
        <h1 class="mb-4 text-center w-100">Lista de Notas</h1>
        <!-- Botón para Crear Nueva Nota alineado a la derecha -->
        
    </div>
    <a href="{{ url_for('notes.create_note') }}" class="btn btn-success btn-lg" style="position: absolute; top: 15px; right: 15px;">
            +
        </a>

    <div class="row justify-content-center">
        <div class="col-lg-12">
            <table class="table table-bordered table-striped table-hover text-center">
                <thead class="thead-dark">
                    <tr>
                        <th style="width: 20%;">Título</th>
                        <th style="width: 30%;">Contenido</th>
                        <th style="width: 15%;">Fecha de Creación</th>
                        <th style="width: 15%;">Última Modificación</th>
                        <th style="width: 15%;">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    {% for nota in notas %}
                    <tr>
                        <td>{{ nota.titulo }}</td>
                        <td>{{ nota.contenido }}</td>
                        <td>{{ nota.fecha_creacion }}</td>
                        <td>{{ nota.fecha_modificacion }}</td>
                        <td>
                            <!-- Botón de Editar -->
                            <a href="{{ url_for('notes.editar_nota', id=nota.id) }}" class="btn btn-primary btn-sm">
                                Editar
                            </a>
                            <!-- Botón de Eliminar -->
                            <a href="{{ url_for('notes.eliminar_nota', id=nota.id) }}" class="btn btn-danger btn-sm">
                                Eliminar
                            </a>
                        </td>
                    </tr>
                    {% else %}
                    <tr>
                        <td colspan="5">No hay notas aún.</td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock body %}
