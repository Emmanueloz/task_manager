{% extends "base.jinja" %}

{% block title %}Crear Nota{% endblock title %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <h1 class="text-center mb-4">Crear Nueva Nota</h1>

            <!-- Mostrar mensajes flash -->
            {% with messages = get_flashed_messages(with_categories=True) %}
              {% if messages %}
                <div class="alert alert-success">
                  {% for category, message in messages %}
                    <p class="{{ category }}">{{ message }}</p>
                  {% endfor %}
                </div>
              {% endif %}
            {% endwith %}

            <div class="card bg-light"> 
                <div class="card-body">
                    <form method="POST" action="{{ url_for('notes.guardar_note') }}">
                        {{ form.hidden_tag() }}

                        <!-- Campo para el Título -->
                        <div class="form-group mb-3">
                            <label for="titulo">Título</label>
                            {{ form.titulo(class_='form-control', placeholder='Escribe el título de tu nota') }}
                        </div>

                        <!-- Campo para el Contenido -->
                        <div class="form-group mb-3">
                            <label for="contenido">Contenido</label>
                            {{ form.contenido(class_='form-control', placeholder='Escribe el contenido de tu nota') }}
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between mt-4">
                            <!-- Botón de Guardar -->
                            {{ form.submit(class_='btn btn-primary') }}
                            
                            <!-- Botón de Cancelar -->
                            <a href="{{ url_for('notes.notes_list') }}" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock body %}
