{% extends "base.jinja" %}

{% block title %}Crear Nota{% endblock title %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <h1 class="text-center mb-4">Crear Nueva Nota</h1>
            <div class="card">
                <div class="card-body">
                    <form method="POST" action="{{ url_for('notes.guardar_note') }}">
                        {{ form.hidden_tag() }}

                        <!-- Campo para el Título -->
                        <div class="form-group">
                            <label for="titulo">Título</label>
                            {{ form.titulo(class_='form-control', placeholder='Escribe el título de tu nota') }}
                            {% if form.titulo.errors %}
                                <div class="text-danger">
                                    {% for error in form.titulo.errors %}
                                        <p>{{ error }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <!-- Campo para el Contenido -->
                        <div class="form-group">
                            <label for="contenido">Contenido</label>
                            {{ form.contenido(class_='form-control', placeholder='Escribe el contenido de tu nota') }}
                            {% if form.contenido.errors %}
                                <div class="text-danger">
                                    {% for error in form.contenido.errors %}
                                        <p>{{ error }}</p>
                                    {% endfor %}
                                </div>
                            {% endif %}
                        </div>

                        <!-- Botones -->
                        <div class="d-flex justify-content-between mt-4">
                            <!-- Botón de Guardar -->
                            {{ form.submit(class_='btn btn-primary') }}
                            
                            <!-- Botón de Cancelar -->
                            <a href="{{ url_for('notes.notes_list') }}" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock body %}
