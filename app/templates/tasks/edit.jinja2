{% extends "base.jinja" %}

{% block title %}
Edicar Task
{% endblock title %}

{% block styles %}
{{ super() }}
<!-- Bootstrap CSS -->
<link rel="stylesheet" href="{{ url_for('static', filename='bootstrap/css/bootstrap.min.css') }}">
{% endblock styles %}

{% block body %}
<!-- Main Content -->
<div class="container mt-5">
    <div class="d-flex justify-content-center">
        <div class="w-100" style="max-width: 960px;">
            <h2 class="fw-bold mb-4">editar task</h2>
            <form>
                <!-- Task Name -->
                <div class="mb-4">
                    <label for="taskName" class="form-label">Task name</label>
                    <input type="text" id="taskName" class="form-control" placeholder="Task name" required>
                </div>
                <!-- Description -->
                <div class="mb-4">
                    <label for="description" class="form-label">Description</label>
                    <textarea id="description" class="form-control" rows="5" placeholder="Description"
                        required></textarea>
                </div>

                <!-- Priority Section -->
                <h5 class="fw-bold mb-3">Priority</h5>
                <!-- Priority Options -->
                <div class="border rounded-3 mb-2 p-3">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="priority" id="highPriority" value="high"
                            checked>
                        <label class="form-check-label fw-bold" for="highPriority">High</label>
                        <p class="text-muted mb-0">Urgent task</p>
                    </div>
                </div>

                <div class="border rounded-3 mb-2 p-3">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="priority" id="mediumPriority" value="medium">
                        <label class="form-check-label fw-bold" for="mediumPriority">Medium</label>
                        <p class="text-muted mb-0">Moderate priority</p>
                    </div>
                </div>

                <div class="border rounded-3 mb-4 p-3">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="priority" id="lowPriority" value="low">
                        <label class="form-check-label fw-bold" for="lowPriority">Low</label>
                        <p class="text-muted mb-0">Low priority</p>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-between">
                    <button type="button" class="btn btn-outline-secondary">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock body %}