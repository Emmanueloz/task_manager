{% extends 'base.jinja' %}

{% block body %}
    <div class="container">
        <h1>Eliminar Evento</h1>
        <div class="alert alert-warning" role="alert">
            <h4 class="alert-heading">Advertencia!</h4>
            <p>¿Estás seguro de que deseas eliminar el evento <strong>"{{ evento.titulo }}"</strong>? Esta acción no se puede deshacer.</p>
        </div>
        
        <form id="delete-form" action="{{ url_for('events.delete_event', id=evento.id) }}" method="POST">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a href="{{ url_for('events.list_events') }}" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
{% endblock %}
