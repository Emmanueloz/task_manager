{% extends 'base.jinja' %}

{% block title %}Crear Nuevo Evento{% endblock %}

{% block body %}
<div class="container mt-5 p-4 rounded bg-white shadow">
    <h2 class="mb-4 text-center">Crear Nuevo Evento</h2>
    <form method="POST" action="{{ url_for('events.create_event') }}">
        {{ form.hidden_tag() }}  

        <div class="form-group mb-3">
            <label for="titulo">T√≠tulo del evento</label>
            {{ form.titulo(class="form-control", placeholder="Ingresa el t√≠tulo del evento", required=True) }}
        </div>

        <div class="form-group mb-3">
            <label for="descripcion">Descripci√≥n del evento</label>
            {{ form.descripcion(class="form-control", placeholder="Ingresa una descripci√≥n del evento", rows=3, required=True) }}
        </div>

        <div class="form-group mb-3 d-flex align-items-center">
            <label for="fecha" class="form-label me-2">
                <img src="{{ url_for('static', filename='') }}" alt="üìÖ" class="icon me-2">
            </label>
            {{ form.fecha(class="form-control", required=True) }}  <!-- Usar el campo de formulario -->
        </div>

        <div class="form-group mb-3 d-flex align-items-center">
            <label for="hora" class="form-label me-2">
                <img src="{{ url_for('static', filename='') }}" alt="‚åö" class="icon me-2">
            </label>
            {{ form.hora(class="form-control", required=True) }}  
        </div>

        <div class="form-group mb-3 text-center">
            <button type="submit" class="btn btn-primary me-3">Guardar Evento</button>
            <a href="{{ url_for('events.list_events') }}" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

<style>
    input[type="text"], input[type="date"], input[type="time"], textarea {
        width: 100%;
    }

    .text-center {
        display: flex;
        justify-content: center;
        gap: 20px;
    }
</style>
{% endblock %}
